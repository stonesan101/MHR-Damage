{
	"root": true,
	"presets": ["airbnb"],
	"extends": "eslint:recommended",
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"airbnb",
		"@babel/plugin-proposal-nullish-coalescing-operator",
		"@babel/plugin-proposal-export-namespace-from",
		"@babel/preset-env",
		"plugin:@typescript-eslint/recommended"
	],
	"ignorePatterns": ["src/**/*.test.ts", "src/frontend/generated/*"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"jquery": true,
		"project": ["./project.html"]
	},
	"rules": {
		"arrow-body-style": "always",
		"prefer-arrow-callback": "always",
		"semi-style": "warn",
		"array-element-newline": "off",
		"array-bracket-newline": "warn",
		"no-console": 0,
		"no-debugger": 0,
		"no-multiple-empty-lines": "warn",
		"camelcase": "warn",
		"dot-location": "warn",
		"max-len": "off",
		"no-tabs": "off",
		"no-trailing-spaces": "warn",

		"no-var": "warn",
		"object-curly-spacing": "warn",
		"quotes": "warn",
		"space-before-function-paren": ["warn", "always"],
		"space-in-parens": ["warn", "always"],
		"space-infix-ops": "warn",
		"space-unary-ops": "warn",
		"spaced-comment": [
			"warn",
			"always",
			{
				"exceptions": ["-"]
			}
		],
		"template-curly-spacing": "warn",

		"no-undef": "warn",

		"no-void": "warn",
		"no-warning-comments": "warn",
		"no-with": "warn",

		"prefer-rest-params": "warn",
		"prefer-spread": "warn",
		"prefer-template": "warn",
		"require-await": "warn",
		"require-yield": "warn",
		"strict": "warn",
		"use-isnan": "warn",
		"valid-typeof": "warn",

		"no-unused-expressions": "warn",
		"no-unused-vars": "warn",
		"no-useless-constructor": "warn",
		"no-useless-return": "warn",
		"no-bitwise": "off",
		"indent": "off",
		"object-curly-newline": "warn",
		"newline-per-chained-call": "off",
		"no-plusplus": "off",

		"one-var-declaration-per-line": "off",
		"operator-linebreak": "off",
		"no-mixed-spaces-and-tabs": "off",
		"no-use-before-define": "off",
		"prefer-const": "off"
	},
	"globals": {
		"handicraft": "readonly",
		"mastersTouch": "readonly",
		"DemonAmmo": "readonly",
		"WaterBlight": "readonly",
		"shieldChargeEleid": "readonly",
		"shieldChargeIMPid": "readonly",
		"Agitator": "readonly",
		"white": "writable",
		"blue": "writable",
		"green": "writable",
		"yellow": "writable",
		"orange": "writable",
		"red": "writable",
		"InsectGlaiveId": "writable",
		"LongSwordId": "writable",
		"ChargeBladeid": "writable",
		"LightBowGunid": "writable",
		"HeavyBowGunid": "writable",
		"RangedId": "writable",
		"BowGunId": "writable",
		"Sharpness": "writable",
		"BowId": "writable",

		"uniqueBuffs": "writable",
		"Barrelid": "writable",
		"WeaponId": "writable",
		"felineMarksmanid": "writable",
		"Recoilid": "writable",
		"Reloadid": "readonly",
		"weaponRampage": "readonly",
		"SpareShotid": "readonly",
		"DemonDrug": "readonly",
		"MegaDemonDrug": "readonly",
		"AmmoUPid": "readonly",
		"id": "writable",
		"ammo": "writable",
		"dpsTable": "writable",
		"ammoTable": "writable",
		"IMPUAED": "readonly",
		"c0": "writable",
		"e0": "writable",
		"g0": "writable",
		"d0": "writable",
		"f0": "writable",
		"h0": "writable",
		"spareAdjust": "writable",
		"dpsBody": "writable",
		"dpsHead": "writable",
		"ammoBody": "writable",
		"i0": "writable",
		"pierceAdjust": "writable",
		"inputComboRepeat": "writable",
		"ammoHead": "writable",
		"weaponRampage0": "readonly",
		"enrageDisplay": "writable",
		"weaponId": "writable",
		"ammoChange": "writable",
		"resetCombo": "writable",
		"Bludgeoner": "writable"
	}
}
